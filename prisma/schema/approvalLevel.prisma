model ApprovalLevel {
  id              String                  @id @default(auto()) @map("_id") @db.ObjectId
  role            ApproverRole
  description     String?
  isRequired      Boolean                 @default(true)
  
  // Auto-approval settings
  autoApproveUnder Float?
  timeoutDays     Int?                    // Auto-approve after X days if no response
  
  // Many-to-many relation with workflows
  workflows       WorkflowApprovalLevel[]
  
  createdAt       DateTime                @default(now())
  updatedAt       DateTime                @updatedAt

  @@map("approvalLevels")
}
