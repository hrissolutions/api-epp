				"apiKey": {
					"type": "apiKey",
					"in": "header",
					"name": "X-API-Key",
					"description": "API Key for authentication"
				}
			}
		}
	},
	"apis": ["./docs/models/*.yaml", "./app/**/*.router.ts", "./dist/**/*.router.js"]
