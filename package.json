{
	"name": "msa-template-1bis",
	"version": "1.0.122",
	"main": "dist/lib-entry.js",
	"scripts": {
		"dev": "dotenv nodemon index.ts",
		"start": "dotenv nodemon index.ts",
		"lint": "eslint app/**/*.ts index.ts lib-entry.ts",
		"format": "eslint app/**/*.ts index.ts lib-entry.ts --fix",
		"test": "mocha --require ts-node/register tests/**/*.spec.ts",
		"postinstall": "npm run prisma-generate",
		"build": "webpack --config webpack.config.js",
		"prod": "node ./dist/server.ts",
		"export-docs": "ts-node scripts/generate-openapi.ts && ts-node scripts/export-openapi.ts && npx openapi-to-postmanv2 -s docs/generated/swagger.json -o docs/generated/postman.collection.json -p",
		"prisma-docs": "npx prisma studio",
		"prisma-migrate": "npx prisma migrate dev",
		"prisma-generate": "npx prisma@6.5.0 generate --schema prisma/schema/schema.prisma",
		"prisma-format": "npx prisma format",
		"prisma-seed": "npx prisma db seed",
		"prisma-reset": "npx prisma migrate reset --force",
		"apply-indexes": "ts-node scripts/apply-indexes.ts",
		"copy-codebase": "ts-node scripts/copy-codebase.ts",
		"generate": "ts-node scripts/generate-and-export.ts",
		"api-list": "curl -X GET 'http://localhost:3000/api/docs/api-list?format=json' | jq",
		"zod-generate": "node scripts/zod-generate.js"
	},
	"prisma": {
		"seed": "ts-node --compiler-options {\"module\":\"CommonJS\"} prisma/seed.ts"
	},
	"author": "1BIS",
	"license": "MIT",
	"description": "A modular microservice template built with TypeScript, Express, and Prisma (MongoDB). It includes service scaffolding tools, consistent query utilities with data grouping, Zod validation, structured logging, comprehensive seeding system, and Swagger/OpenAPI documentation.",
	"keywords": [
		"typescript",
		"express",
		"prisma",
		"api",
		"restful",
		"authentication",
		"microservice",
		"template",
		"scaffolding",
		"mongodb",
		"zod",
		"swagger",
		"openapi",
		"query-utils",
		"logging"
	],
	"dependencies": {
		"@logtail/node": "^0.5.2",
		"@logtail/winston": "^0.5.2",
		"@types/cookie-parser": "^1.4.8",
		"@types/ejs": "^3.1.5",
		"@types/express": "^5.0.1",
		"@types/jsonwebtoken": "^9.0.9",
		"@types/multer": "^1.4.13",
		"@types/nodemailer": "^7.0.5",
		"@types/swagger-jsdoc": "^6.0.4",
		"@types/swagger-ui-express": "^4.1.8",
		"argon2": "^0.41.1",
		"cloudinary": "^2.6.1",
		"cookie-parser": "^1.4.7",
		"csv-parser": "^3.2.0",
		"dotenv": "^16.4.7",
		"ejs": "^3.1.10",
		"express": "^5.1.0",
		"express-rate-limit": "^7.4.1",
		"express-slow-down": "^2.0.3",
		"helmet": "^8.1.0",
		"http": "^0.0.1-security",
		"ioredis": "^5.7.0",
		"jsonwebtoken": "^9.0.2",
		"mongoose": "^8.18.1",
		"multer": "^2.0.1",
		"nodemailer": "^7.0.12",
		"socket.io": "^4.8.1",
		"swagger-jsdoc": "^6.2.8",
		"swagger-ui-express": "^5.0.1",
		"ts-loader": "^9.5.2",
		"validator": "^13.12.0",
		"webpack": "^5.96.1",
		"webpack-cli": "^5.1.4",
		"winston": "^3.17.0",
		"zod": "^3.25.67"
	},
	"devDependencies": {
		"@prisma/client": "^6.5.0",
		"@types/chai": "^5.2.1",
		"@types/cors": "^2.8.18",
		"@types/express-slow-down": "^1.0.0",
		"@types/ioredis": "^4.28.10",
		"@types/mocha": "^10.0.10",
		"@types/mongodb": "^4.0.6",
		"@types/node": "^22.14.0",
		"@types/supertest": "^6.0.3",
		"@types/validator": "^13.12.0",
		"@types/yaml": "^1.9.6",
		"@typescript-eslint/eslint-plugin": "^8.29.0",
		"@typescript-eslint/parser": "^8.29.0",
		"chai": "^4.5.0",
		"dotenv-cli": "^8.0.0",
		"eslint": "^9.24.0",
		"eslint-config-prettier": "^10.1.1",
		"eslint-plugin-import": "^2.31.0",
		"eslint-plugin-prettier": "^5.2.6",
		"husky": "^9.1.7",
		"i": "^0.3.7",
		"mocha": "^11.1.0",
		"mongodb": "^6.16.0",
		"nodemon": "^3.1.9",
		"npm": "^11.2.0",
		"prisma": "^6.5.0",
		"rimraf": "^6.0.1",
		"supertest": "^7.1.4",
		"ts-node": "^10.9.2",
		"tsx": "^4.19.3",
		"typescript": "^5.8.3",
		"yaml": "^2.8.0"
	}
}
